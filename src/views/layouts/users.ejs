<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="sutaC">
    <title>Gwiazdy ZSI | Add Admin User</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">

    <script src="https://unpkg.com/htmx.org@1.9.5"
        integrity="sha384-xcuj3WpfgjlKF+FXhSQFQ0ZNr39ln+hwjN3npfM9VBnUskLolQAcN80McRIVOPuO"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/users.css">
</head>

<body>
    <header id="top-header">
        <h1>Users</h1>
    </header>

    <section class="users">
        <h2>Users list</h2>

        <% users.forEach(user=> { %>
            <div class="user">
                <p>
                    <%= user.login %>
                </p>
                <% if(user.login !=="admin" ){ %>
                    <button hx-delete="/deleteUser/<%= user.login %>"
                        hx-confirm="Are you sure you want to delete user <%= user.login %>?"
                        hx-target="closest .user">Delete user</button>
                    <% } %>
            </div>
            <% }); %>
    </section>

    <main>

        <h2>Add User</h2>

        <small id="error"></small>

        <form hx-boost="true" action="/addAdminUser" method="post" hx-target="#error"
            hx-confirm="Are you sure you want to add new admin user?" hx-push-url="false">

            <div class="field">
                <label for="login">Login</label>
                <input type="text" name="login" id="login" placeholder="Login" required>
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password" required>
            </div>

            <div class="field">
                <label for="repeatPassword">Repeat Password</label>
                <input type="password" name="repeatPassword" id="repeatPassword" placeholder="Repeat Pasword" required>
            </div>

            <button type="submit">Add</button>
        </form>

    </main>

    <footer>
        <a href="/admin"><button>Return</button></a>

        <a href="#top-header">
            <button>^</button>
        </a>
    </footer>

</body>

</html>